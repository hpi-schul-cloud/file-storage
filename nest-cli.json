{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "builder": "swc",
  "typeCheck": true,
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "files-storage": {
      "type": "application",
      "entryFile": "apps/files-storage.app"
    },
    "files-storage-amqp": {
      "type": "application",
      "entryFile": "apps/files-storage-consumer.app"
    },
    "files-storage-kafka": {
      "type": "application",
      "entryFile": "apps/files-storage-kafka.app"
    },
    "preview-generator-amqp": {
      "type": "application",
      "entryFile": "apps/preview-generator-consumer.app"
    }
  }
}