apiVersion: apps/v1
kind: Deployment
metadata:
  name: filestorage-server-deployment
  namespace: {{ NAMESPACE }}
{% if ANNOTATIONS is defined and ANNOTATIONS|bool %}
  annotations:
{% if RELOADER is defined and RELOADER|bool %}
    reloader.stakater.com/auto: "true"
{% endif %}
{% endif %}
  labels:
    app: filestorage-server
    app.kubernetes.io/part-of: schulcloud-verbund
    app.kubernetes.io/version: {{ FILESTORAGE_SERVER_IMAGE_TAG }}
    app.kubernetes.io/name: filestorage-server
    app.kubernetes.io/component: filestorage
    app.kubernetes.io/managed-by: ansible
    git.branch: {{ FILESTORAGE_SERVER_BRANCH_NAME }}
    git.repo: {{ FILESTORAGE_SERVER_REPO_NAME }}
spec:
  replicas: {{ FILESTORAGE_SERVER_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: filestorage-server
  template:
    metadata:
      labels:
        app: filestorage-server
        app.kubernetes.io/part-of: schulcloud-verbund
        app.kubernetes.io/version: {{ FILESTORAGE_SERVER_IMAGE_TAG }}
        app.kubernetes.io/name: filestorage-server
        app.kubernetes.io/component: filestorage
        app.kubernetes.io/managed-by: ansible
        git.branch: {{ FILESTORAGE_SERVER_BRANCH_NAME }}
        git.repo: {{ FILESTORAGE_SERVER_REPO_NAME }}
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      os:
        name: linux
      containers:
      - name: filestorage
        image: {{ FILESTORAGE_SERVER_IMAGE }}:{{ FILESTORAGE_SERVER_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 4444
          name: filestorage-http
          protocol: TCP
        - containerPort: 9090
          name: metrics
          protocol: TCP
        envFrom:
        - configMapRef:
            name: filestorage-server-configmap
        - secretRef:
            name: filestorage-server-secret
        resources:
          limits:
            cpu: {{ FILESTORAGE_SERVER_CPU_LIMITS|default("2000m", true) }}
            memory: {{ FILESTORAGE_SERVER_MEMORY_LIMITS|default("2Gi", true) }}
          requests:
            cpu: {{ FILESTORAGE_SERVER_CPU_REQUESTS|default("100m", true) }}
            memory: {{ FILESTORAGE_SERVER_MEMORY_REQUESTS|default("150Mi", true) }}
{% if AFFINITY_ENABLE is defined and AFFINITY_ENABLE|bool %}
      affinity:
        podAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 9
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/part-of
                  operator: In
                  values:
                  - schulcloud-verbund
              topologyKey: "kubernetes.io/hostname"
              namespaceSelector: {}
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
{% if ANIT_AFFINITY_NODEPOOL_ENABLE is defined and ANIT_AFFINITY_NODEPOOL_ENABLE|bool %}
          - weight: 10
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/name
                  operator: In
                  values:
                  - filestorage-server
              topologyKey: {{ ANIT_AFFINITY_NODEPOOL_TOPOLOGY_KEY }}
{% endif %}
          - weight: 20
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app.kubernetes.io/name
                  operator: In
                  values:
                  - filestorage-server
              topologyKey: "topology.kubernetes.io/zone"
{% endif %}
